{% extends "default/module.html.jinja2" %}

{# we add a style tag here so that IDEs highlight everything that follows as CSS.
This line won't be included in any rendered output, text in Jinja2 child templates is discarded outside of blocks. #}
<style>

    {% block style_theme %}
        :root {
            --pdoc-background: #212529;
        }

        .pdoc {
            --text: #f7f7f7;
            --muted: #9d9d9d;
            --link: #58a6ff;
            --link-hover: #3989ff;
            --code: #333;
            --active: #555;

            --accent: #343434;
            --accent2: #555;

            --nav-hover: rgba(0, 0, 0, 0.1);
            --name: #77C1FF;
            --def: #0cdd0c;
            --annotation: #00c037;
        }
    {% endblock %}

    {% block style_content %}
        {{ super() }}
        .pdoc h6 {
            font-weight: bold;
            margin: .3em .0em;
        }
    {% endblock %}
</style>

{% block edit_button %}
    {% if edit_url %}
        <a class="pdoc-button git-button" href="{{ edit_url }}">View on GitHub</a>
    {% endif %}
{% endblock %}
